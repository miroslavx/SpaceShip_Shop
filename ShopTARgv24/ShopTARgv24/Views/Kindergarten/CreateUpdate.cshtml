@model ShopTARgv24.Models.Kindergartens.KindergartenCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update Kindergarten</h1>
}
else
{
    <h1>Create Kindergarten</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KindergartenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Teacher" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Teacher" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" type="number" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EstablishedDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EstablishedDate" class="form-control" type="date" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ContactPhone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ContactPhone" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" type="email" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Images</label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input asp-for="Files" class="form-control" multiple type="file" accept="image/*" />
                </div>
            </div>
        </div>

        @foreach (var image in Model.Images)
        {
            <partial name="_Images" model="image" />
        }

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="kindergarten" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="kindergarten" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="kindergarten" class="btn btn-success">Back</a>

    </form>
</div>