@model ShopTARgv24.Models.Kindergartens.KindergartenDetailsViewModel

<h1>Kindergarten Details</h1>

<div>
    <h4>@Model.KindergartenName</h4>
    <hr />

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Id)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.GroupName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.KindergartenName)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Teacher" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Teacher)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ChildrenCount)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="EstablishedDate" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.EstablishedDate)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Address)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ContactPhone" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ContactPhone)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Email)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Description)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.CreatedAt)
        </div>
    </dl>

    <dl class="row">
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ModifiedAt)
        </div>
    </dl>

    @foreach (var image in Model.Images)
    {
        <partial name="_Images" model="image" />
    }

    <a asp-action="index" asp-controller="kindergarten" class="btn btn-primary">Back</a>
</div>