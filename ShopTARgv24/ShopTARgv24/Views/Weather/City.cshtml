@model ShopTARgv24.Core.Dto.AccuLocationWeatherResultDto

<h1>Weather Information</h1>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>City: @Model.CityName</h3>
            <p>Weather data will be displayed here when API is properly configured.</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Weather" asp-action="Index" class="btn btn-primary">Back to Search</a>
    </div>
</div>