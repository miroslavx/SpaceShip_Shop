@model shoptar.Core.Domain.Kindergarten

@{
    ViewData["Title"] = "Add New Kindergarten";
}

<h1>Add New Kindergarten</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="GroupName" class="control-label">Group Name</label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ChildrenCount" class="control-label">Children Count</label>
                <input asp-for="ChildrenCount" type="number" class="form-control" />
                <span asp-validation-for="ChildrenCount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KindergartenName" class="control-label">Kindergarten Name</label>
                <input asp-for="KindergartenName" class="form-control" />
                <span asp-validation-for="KindergartenName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TeacherName" class="control-label">Teacher Name</label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>